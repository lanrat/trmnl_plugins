{% template comic %}
<div class="view bg-white">
  <div class="image-container">
    {% if rss.channel.item %}
    <img id="comic" class="image image-dither" />
    <span id="encoded" style="display: none;">{{ rss.channel.item[0]encoded }}</span>
    {% else %}
    <p class="text--black">Error Loading Image</p>
    {% endif %}
  </div>
  <div class="title_bar" style="display: none;">
    {% if rss.channel.item %}
    <span class="instance text-stroke">{{ rss.channel.item[0].title }}</span>
    {% endif %}
  </div>
</div>
<script>
  function getImg() {
    var enc = document.getElementById("encoded");
    if (!enc) {
      console.log("no encoded element");
      return;
    }
    var img = enc.querySelector("img");
    if (!img) {
      console.log("unable to find img element");
      return;
    }
    document.getElementById("comic").src = img.src;
  }
  getImg();
</script>
<style>
  .view {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    position: relative;
  }

  .image-container {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
    overflow: hidden;
    min-height: 0; /* Important for flex children */
  }

  .image-container img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    display: block;
    border-radius: 5px;
  }

  .title_bar {
    flex-shrink: 0;
    z-index: 1;
  }
</style>
{% endtemplate %}