{% template comic %}
<div class="view bg-white">
  <div class="image-container">
    {% if items %}
    <img src="{{ items[0]image }}" class="image image-dither" />
    {% else %}
    <p class="text--black">Error Loading Image</p>
    {% endif %}
  </div>
  {% if items %}
  {% assign title = items[0]content_html | strip_html %}
  {% if title != blank %}
  <div class="w--full text-stroke text--center p--1 value value--xsmall clamp--none">
    {{ title }}
  </div>
  {% endif %}
  {% endif %}
</div>

<style>
  .view {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    position: relative;
  }

  .image-container {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
    overflow: hidden;
    min-height: 0; /* Important for flex children */
  }

  .image-container img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    display: block;
    border-radius: 5px;
  }

  .title_bar {
    flex-shrink: 0;
    z-index: 1;
  }
</style>
{% endtemplate %}
